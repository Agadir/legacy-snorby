<h1>Global Snorby Settings</h1>
<br />

<%- form_tag({:controller => 'Settings', :action => 'save_settings'}, :multipart => true) do -%>
  Device Name:<br />
  <%= text_field_tag 'settings[device_name]', @settings.device_name %><br />
  <br />
  <%= link_to "Add Custom Report Logo", '#', :id => 'add_logo' %><br />
  <br />
  <div id="settings_logo" style='display:none;'>
    <%= image_tag @settings.logo.url(:large) %>
    <br />
    <%= label_tag 'Company Logo:' %><br />
    <%= file_field_tag 'settings[logo]' %><br />
  </div>
  Enable Solera Plugin: <%= check_box_tag :solera_support %><br />
  Events Per Page: <%= select_tag('settings[events_per_page]', options_for_select([['10 Events', 10], ['20 Events', 20], ['50 Events', 50], ['100 Events', 100]], @settings.events_per_page)) %><br />
  <br />
  <br />
  <%= submit_tag "Save" %>
  <%= submit_tag "Cancel", :onclick => 'history.go(-1);return false;' %>
<%- end -%>