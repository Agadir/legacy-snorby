<% if !@events.blank? %>

  <% for event in @events %>
		<% div_for event do %>
			<%- if event.sig.sig_priority == 3 -%>
				<%= image_tag('severity/low.png') %>
			<%- elsif event.sig.sig_priority == 2 -%>
				<%= image_tag('severity/warn.png') %>
			<%- else -%>
				<%= image_tag('severity/high.png') %>
			<%- end -%>
			<%= severity_image(event.sig.sig_priority) %>
			<%= link_to "#{event.sig.sig_name}", event_path(event) %><br />
		
			<%- if event.sig.sig_class_id == 0-%>
				None -
			<%- else -%>
				<%= get_sig_type_for?(event.sig.sig_class_id) %> -
			<%- end -%>
		
			<%- unless event.sig_reference.blank? or event.sig_reference-%>
				<%= get_ref_type_for?(event.sig_reference.ref_id) %> - <%= get_ref_data_for?(event.sig_reference.ref_id) %><br />
			<%- end -%>
		
			<%= time_ago_in_words(event.timestamp) %> - <%= event.timestamp.strftime('%B %d %Y - %I:%M:%S %p') %><br />
			<br />
		<%- end -%>
  <% end %>
<% else %>
  No Events
<% end %>