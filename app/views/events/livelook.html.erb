<div id="events">
	<div id='last_pull_time' align='right'>Last Pull Time: <%= @time.strftime('%I:%M:%S %p') %></div>
	
	<%= render :partial => @events %>
</div>

<%= periodically_call_remote(:complete => visual_effect(:pulsate, "last_pull_time", :duration => 10), 
		:url => { :action => 'livelook' },
 		:frequency => 40,
		:update => { :success => "events", :failure => "error" }) %>