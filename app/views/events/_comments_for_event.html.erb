<div id="comment_count">
	<h2><%= image_tag('other/comment.png', :size=>'16x16') %> <%= pluralize(@event.comments.size, 'Comment') %></h2>
</div>
<br />
<div id="comments">
		<%= render :partial => @event.comments %>
</div>

<div id="comment_form">
	<%- remote_form_for [@event, Comment.new], { :loading => "$('#loading_comment').show();", :complete => "$('#loading_comment').hide();" } do |f| -%>
		<%= f.label :body, "New Comment" %><br />
		<%= f.text_area :body, :rows => 10, :cols => 80 %><br />
		<br />
		<p>
		<%= f.submit "Add Comment Â»" %> 
		<div id='loading_comment' style='display:none;'><%= image_tag('other/loading.gif', :size => '22x22') %></div>
		</p>
	<%- end -%>
</div>