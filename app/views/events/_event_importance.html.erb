<%= link_to_remote "#{image_tag('other/comments.png', :size => '12x12')}" %>

<%- if event.importance.present? -%>

<%= link_to_remote image_tag('other/is_important.png', :size => '12x12'), :url => { :controller => 'events', :action => "important", :id => event }, :html => { :title => "Make This Event Important" } %>

<%- else -%>

<%= link_to_remote image_tag('other/is_not_important.png', :size => '12x12'), :url => { :controller => 'events', :action => "important", :id => event }, :html => { :title => "Make This Event Important" } %>

<%- end -%>

<%- if current_user.admin -%>
<%= link_to_remote "#{image_tag('other/slash.png', :size => '12x12')}", :url => { :controller => 'events', :action => "remove_event", :id => event }, :html => { :title => "Destroy Event: #{event.sig.sig_name}" } %>
<%- end -%>