<h2>Event Summary:</h2>
<br />
<div id="summary_info">
	<div id="summary_info_in">
		<table border="0" cellspacing="5" cellpadding="5">
			<tr>
				<th>Sensor</th>
				<th>Interface</th>
				<th>Hostname</th>
				<th>ID:GID:SID</th>
				<th>Severity</th>
				<th>Event Percentage</th>
				<th>Event Total</th>
			</tr>
			<tr>
				<td><%= @event.sensor.id %></td>
				<td><%= @event.sensor.interface %></td>
				<td><%= @event.sensor.hostname %></td>
				<td><%= @event.id[1] %>:<%= @event.sig.sig_gid %>:<%= @event.sig.sig_sid %></td>
				<td><%= severity_image(@event.sig.sig_priority) %></td>
				<td>
					<%= horizontal_bar_graph  [["Event Percentage", ((total_event_count_for?(@event)/Event.all.size.to_f) * 100).round(2)]] %>
				</td>  
				<td><%= total_event_count_for?(@event) %></td>
			</tr>
		</table>
	</div>
</div>

<br />