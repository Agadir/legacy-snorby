if @event.importance.present?
  page.replace "#important_#{@event.sid + @event.cid}", "#{image_tag('other/is_not_important.png', :size=>'14x14', :id => "important_#{@event.sid + @event.cid}", :title => 'Make This Event Important.', :class => 'add_tipsy')}", :locals => {:event=>@event}
else
  page.replace "#important_#{@event.sid + @event.cid}", "#{image_tag('other/is_important.png', :size=>'14x14', :id => "important_#{@event.sid + @event.cid}", :title => 'Make This Event Unimportant.', :class => 'add_tipsy')}", :locals => {:event=>@event}
end
