<% form_for @user, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

	<div id="box">
		<div id="box_inside">
			<div id='user_data_and_stats'>
				<div id="user_data_info">
					<%= image_tag @user.avatar.url(:medium) %>
					<h1><span class='edit_name'><%=h @user.name %></span></h1>
				 	<div id="user_data_info_under">
				 	  <h2><%=h @user.email %></h2>
  					<p><strong>Current Login IP:</strong> <%=h @user.current_login_ip %></p>
  					<%- if @user.last_request_at.blank? -%>
  					  <p><strong>Last Request At:</strong> N/A</p>
  					<%- else -%>
  					  <p><strong>Last Request At:</strong> <%=h @user.last_request_at.strftime('%A, %B %d %Y at %I:%M:%S %p') %></p>
  					<%- end -%>
				 	</div>
				</div>
			</div>
		</div>
	</div>

  <%= render :partial => "form", :object => f %><br />
  <%= f.submit "Update" %> <%= link_to "Cancel", :back, :class => 'button' %>
<% end %>
