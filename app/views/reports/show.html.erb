<div id="search_options" class='round'>
	<%= link_to "#{image_tag('export/xml.png')}", { :format => 'xml' } %>
	<%= link_to "#{image_tag('export/email.png')}", send_report_path(@report), :rel => 'facebox' %>
</div>
<h1>Snorby <%= @report.rtype.capitalize %> Report</h1>
<br />
<div id="events" class='events'>
	<%= render :partial => @events %>
	<%- if @report.page_events(params[:page]).empty? -%>
	<font color='red'>No results found.</font>
	<%- end -%>
</div>

<% unless @events.next_page.nil? %>
<script type="text/javascript">current_page = 2;</script>
<div id="pagination"><a class="round more blah" href="#load_more_events" id="more" onclick="new Ajax.Request('/reports/show/<%= params[:id] %>?page=' + current_page, {asynchronous:true, evalScripts:true, onComplete:function(request){$('more').removeClassName('loading');}, onLoading:function(request){$('more').addClassName('loading');}, parameters:'authenticity_token=' + encodeURIComponent('<%= form_authenticity_token %>')}); current_page = current_page + 1; return false;">more</a></div>
<%- end -%>