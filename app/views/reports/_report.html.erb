<tr class="<%= cycle('odd', 'even') %>" id="reports">
  <td><%= check_box_tag "report_ids[]", report.id %></td>
	<td><%= link_to "Snorby #{report.rtype.capitalize} Report", report %></td>
	<td><%=h pluralize(report.event_count, 'Event') %></td>
  <td><%=h DateTime.parse(report.from_time).strftime('%B %d %Y') %></td>
	<td><%=h DateTime.parse(report.to_time).strftime('%B %d %Y') %></td>
	<td><%= link_to "#{image_tag('export/xml.png')}", report_path(report, :format => 'xml') %></td>
	<td><%= link_to "#{image_tag('export/email.png')}", send_report_path(report), :rel => 'facebox' %></td>
</tr>