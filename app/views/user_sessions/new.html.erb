<% content_for("page_scripts") do %>
  Event.observe(window, 'load',
    function() { $('user_session_login').focus(); $('user_session_login').select() }
  );
<% end %>

<div id="login">
	
	<div id="login_header"></div>
	<div id="login_data">
		<% form_for @user_session, :url => user_session_path do |f| %>
		  <%= f.error_messages %>
		  <%= f.label :login %><br />
		  <%= f.text_field :login %><br />
		  <br />
		  <%= f.label :password %><br />
		  <%= f.password_field :password %><br />
		  <br />
		  <%= f.submit "Login Â»" %> <%= f.check_box :remember_me %> <%= f.label :remember_me %>
		<% end %>
	</div>
	<div id="login_footer"></div>
</div>