if @user_session.valid?
  page[:user_session_submit].enable
else
  page[:user_session_submit].disable
end

page << "$('.error_message').remove(0)"
@user_session.errors.each do |name, msg|
  page.insert_html :after, "user_session_#{name}", "<span class='error_message'>#{image_tag('other/error_on_val.png', :class => 'on_error_icon')}</span>"
end