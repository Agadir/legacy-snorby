<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title><%= h(yield(:title) || "Snorby - #{Setting.device_name}") %></title>
		<%= javascript_include_tag 'jquery-1.3.2.min', 'jquery-ui-1.7.2.custom.min', 'jrails', 'jquery.livequery', 'jquery.autocomplete', 'jquery.scrollTo', 'swfobject', 'facebox', 'jquery.tipsy', 'jquery.time', 'snorby', :cache => true %>
		<%= stylesheet_link_tag 'snorby', 'facebox', 'jquery.autocomplete', 'jquery.ui' %>
    <%= yield(:head) %>
  </head>

  <body>
	
		<%- flash.each do |name, msg| -%>
			<div id="flash_<%= name %>">
			  <div id="flash_inside">
			    <%= msg %>
			  </div>
			</div>
	  <%- end -%>
	
		<div id="wrapper">
			
			<%= render :partial => 'layouts/header' %>

			<%- if yield(:outside_content) -%>
				<div id="filter_content">
					<div id="filter_text_content">
						<%= yield(:outside_content) %>
					</div>
				</div>
			<%- end -%>
			
			<div id='c_header'></div>
			<div id="c_body">
      
	      <%- if show_title? -%>
	        <h1><%=h yield(:title) %></h1>
	      <%- end -%>
    
  			<div id='c_content_holder'>
	      	<%= yield %>
				</div>
			</div>
			<%= render :partial => 'layouts/footer' %>
		</div>
		
  </body>
</html>
