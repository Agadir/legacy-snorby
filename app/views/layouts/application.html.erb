<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Snorby") %></title>
    <%= javascript_include_tag :defaults, 'facebox', 'swfobject', :cache => true %>
		<%= stylesheet_link_tag 'snorby', 'facebox' %>
    <%= yield(:head) %>

  </head>
  <body>
		<div id="wrapper">
			
			<%= render :partial => 'layouts/header' %>
			
			<div id='c_header'></div>
			<div id="c_body">
	      
				<%- flash.each do |name, msg| -%>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <%- end -%>
      
	      <%- if show_title? -%>
	        <h1><%=h yield(:title) %></h1>
	      <%- end -%>
    
  			<div id='c_content_holder'>
	      	<%= yield %>
				</div>
				
			</div>
		</div>
		
		<%= render :partial => 'layouts/footer' %>
		
  </body>
</html>
