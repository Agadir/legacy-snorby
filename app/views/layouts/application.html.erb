<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Snorby") %></title>
    <%= javascript_include_tag :defaults, 'facebox', 'swfobject', :cache => true %>
		<%= stylesheet_link_tag 'snorby', 'facebox' %>
    <%= yield(:head) %>

  </head>
  <body>
		<div id="wrapper">
			
			<%= render :partial => 'layouts/header' %>
			
			<%- flash.each do |name, msg| -%>
				<div id="flash_<%= name %>" class='round'>
					<div id="close_box">
						<%= link_to_function "#{image_tag('close.png', :size => '14x14')}", fade_div("flash_#{name}") %>
					</div>
					<%= msg %>
				</div>
      <%- end -%>
			
			<div id='c_header'></div>
			<div id="c_body">
      
	      <%- if show_title? -%>
	        <h1><%=h yield(:title) %></h1>
	      <%- end -%>
    
  			<div id='c_content_holder'>
	      	<%= yield %>
				</div>
				
			</div>
		</div>
		
		<%= render :partial => 'layouts/footer' %>
		
  </body>
</html>
