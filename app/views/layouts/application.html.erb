<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Snorby") %></title>
    <%= javascript_include_tag :defaults, 'snorby', 'facebox', 'swfobject', :cache => true %>
		<%= stylesheet_link_tag 'snorby', 'facebox' %>
		<%= calendar_date_select_includes nil %>
    <%= yield(:head) %>

  </head>
  <body>
		<div id="wrapper">
			
			<%= render :partial => 'layouts/header' %>
			
			<%- flash.each do |name, msg| -%>
				<div id="flash_<%= name %>" class='round'>
						<center><%= msg %></center>
				</div>
      <%- end -%>

			<%- if yield(:outside_content) -%>
				<div id="filter_content">
					<div id="filter_text_content">
						<%= yield(:outside_content) %>
					</div>
				</div>
			<%- end -%>
			
			<div id='c_header'></div>
			<div id="c_body">
      
	      <%- if show_title? -%>
	        <h1><%=h yield(:title) %></h1>
	      <%- end -%>
    
  			<div id='c_content_holder'>
	      	<%= yield %>
				</div>
			</div>
			<%= render :partial => 'layouts/footer' %>
		</div>
		
  </body>
	<script type="text/javascript">setTimeout("new Effect.Fade('flash_notice', { duration: 2.0 });", 3050)</script>
	<script type="text/javascript">setTimeout("new Effect.Fade('flash_error', { duration: 2.0 });", 3050)</script>
</html>
