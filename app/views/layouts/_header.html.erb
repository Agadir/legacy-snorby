<div id="header">
	<%- if current_user -%>
	
	<div id="logo"><%= link_to image_tag('snorby_logo.png', :id => 'snorby_logo'), dashboard_path %></div>
	
	<div id="menubar">
		<ul class="menu">
			<li class='start'></li>
			<li class='first'><span><%= link_to "Dashboard", dashboard_path %></span></li>
			<li><%= link_to "LiveLook", livelook_path %></li>
			<li><%= link_to "Events", events_path %></li>
			<li><%= link_to "Reports", reports_path %></li>
			<li><%= link_to "Search", new_search_path %></li>
			<li class='last'><%= link_to "Settings", settings_path %></li>
      <!-- <li class='last'><%= link_to "Logout", logout_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li> -->
		</ul>
		
	</div>
		
	<div id='user_box'>
		<div id='user_data'>
			<div id='user_avatar'><%= link_to "#{image_tag current_user.avatar.url(:menu_bar)}", { :controller => 'users', :action => 'edit', :id => current_user } %></div>
			<div id='user_name'><%=h truncate(current_user.name, :omission => "...", :length => 30) %></div>
			<div id='user_links'>
				<%= link_to "Profile", { :controller => 'users', :action => 'edit', :id => current_user } %> |
				<%= link_to "My Events", my_events_path %> |
				<%= link_to "Logout", logout_path, :method => :delete, :confirm => "Are you sure you want to logout?" %>
			</div>
		</div>
	</div>

	
	<%- else -%>

	<div id="logo"><%= link_to image_tag('snorby_logo.png', :id => 'snorby_logo'), login_path %></div>
	
	<%- end -%>


</div>